{
  "name": "mobx-firebase",
  "version": "0.3.0",
  "description": "Mobx bindings to firebase references",
  "main": "build/index.js",
  "scripts": {
    "prebuild": "rm -r build",
    "build": "tsc -p src/tsconfig.json --rootDir src --outDir build",
    "postbuild": "dts-generator --name mobx-firebase  --out index.d.ts --project src --main mobx-firebase",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/agonbina/mobx-firebase.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/agonbina/mobx-firebase/issues"
  },
  "homepage": "https://github.com/agonbina/mobx-firebase#readme",
  "devDependencies": {
    "typescript": "^2.2.1"
  },
  "peerDependencies": {
    "firebase": "^3.6.10",
    "mobx": "^3.1.0"
  }
}
